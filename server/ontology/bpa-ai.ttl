# Класс для системных промптов
v-bpa:SystemPrompt
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:UserThing ;
  rdfs:label "Системный промпт"@ru ;
  rdfs:label "System Prompt"@en ;
.

v-bpa:promptText
  rdf:type owl:DatatypeProperty ;
  rdfs:label "Текст промпта"@ru ;
  rdfs:label "Prompt Text"@en ;
